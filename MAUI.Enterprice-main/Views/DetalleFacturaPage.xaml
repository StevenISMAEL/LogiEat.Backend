<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LogiEat.Mobile.Views.DetalleFacturaPage"
             Title="Detalle de Factura"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Spacing="0">
            <BoxView HeightRequest="10" Color="#28a745"/>

            <VerticalStackLayout Padding="20" Spacing="5" BackgroundColor="#f8f9fa">
                <Label x:Name="LblEmpresa" Text="LogiEat S.A." FontSize="22" FontAttributes="Bold" HorizontalOptions="Center" TextColor="Black"/>
                <Label Text="RUC: 1799999999001" FontSize="12" HorizontalOptions="Center" TextColor="Gray"/>
                <Label Text="Quito - Ecuador" FontSize="12" HorizontalOptions="Center" TextColor="Gray"/>

                <BoxView HeightRequest="1" Color="LightGray" Margin="0,15"/>

                <Grid ColumnDefinitions="Auto, *" RowDefinitions="Auto, Auto, Auto" RowSpacing="5">
                    <Label Grid.Row="0" Grid.Column="0" Text="NÂ° Factura:" FontAttributes="Bold"/>
                    <Label Grid.Row="0" Grid.Column="1" x:Name="LblNumero" HorizontalOptions="End"/>

                    <Label Grid.Row="1" Grid.Column="0" Text="Cliente:" FontAttributes="Bold"/>
                    <Label Grid.Row="1" Grid.Column="1" x:Name="LblCliente" HorizontalOptions="End"/>

                    <Label Grid.Row="2" Grid.Column="0" Text="RUC/CI:" FontAttributes="Bold"/>
                    <Label Grid.Row="2" Grid.Column="1" x:Name="LblRuc" HorizontalOptions="End"/>
                </Grid>
            </VerticalStackLayout>

            <StackLayout x:Name="ContainerItems" Padding="20">
                <Label Text="DETALLE DE CONSUMO" FontSize="12" FontAttributes="Bold" TextColor="Gray" Margin="0,0,0,10"/>
            </StackLayout>

            <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto, Auto, Auto" Padding="20" BackgroundColor="#f0f2f5" Margin="20,0,20,20">
                <Label Grid.Row="0" Grid.Column="0" Text="Subtotal:" TextColor="Gray"/>
                <Label Grid.Row="0" Grid.Column="1" x:Name="LblSubtotal" TextColor="Gray"/>

                <Label Grid.Row="1" Grid.Column="0" Text="IVA (15%):" TextColor="Gray"/>
                <Label Grid.Row="1" Grid.Column="1" x:Name="LblIva" TextColor="Gray"/>

                <Label Grid.Row="2" Grid.Column="0" Text="TOTAL:" FontAttributes="Bold" FontSize="18" TextColor="Black" Margin="0,10,0,0"/>
                <Label Grid.Row="2" Grid.Column="1" x:Name="LblTotal" FontAttributes="Bold" FontSize="18" TextColor="Green" Margin="0,10,0,0"/>
            </Grid>

            <Grid ColumnDefinitions="*, *" ColumnSpacing="10" Margin="20" Padding="0,0,0,20">
                <Button Grid.Column="0" 
                        Text="Volver" 
                        BackgroundColor="White" 
                        TextColor="Gray" 
                        BorderColor="Gray" 
                        BorderWidth="1" 
                        Clicked="OnVolverClicked"/>

                <Button Grid.Column="1" 
                        Text="ðŸ“¤ Compartir / PDF" 
                        BackgroundColor="#007bff" 
                        TextColor="White" 
                        FontAttributes="Bold"
                        Clicked="OnImprimirClicked"/>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>