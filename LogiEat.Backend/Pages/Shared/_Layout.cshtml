<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LogiEat Admin</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark mb-3">
            <div class="container">
                <a class="navbar-brand" asp-page="/Admin/Index">LogiEat Admin</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">

                    <ul class="navbar-nav me-auto">
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Admin/Index">Pedidos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Admin/Productos/Index">Productos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-info" asp-page="/Admin/Bitacora/Index">👁️ Auditoría</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white fw-bold" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown">
                                    🛠️Administración
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-page="/Admin/Usuarios/Index">👥 Gestión de Usuarios</a></li>
                                    <li><a class="dropdown-item" asp-page="/Admin/Usuarios/RegisterUser">➕ Nuevo Empleado</a></li>
                                </ul>
                            </li>
                        }

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-warning" asp-page="/Cliente/Catalogo">🛒 Comprar</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Cliente/MisPedidos">📄 Mis Pedidos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Cliente/MisFacturas">📄 Facturas</a>
                            </li>
                        }
                    </ul>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <span class="navbar-text me-3">Hola, @User.Identity.Name</span>
                            </li>
                            <li class="nav-item">
                                <form class="d-inline" asp-page="/Account/Logout" method="post">
                                    <button type="submit" class="btn btn-outline-light btn-sm mt-1">Salir</button>
                                </form>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>