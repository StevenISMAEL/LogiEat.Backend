@page
@model LogiEat.Backend.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "Panel de Control";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        🎉 @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        ⚠️ @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>👨‍🍳 Cocina / Pedidos</h1>
    <span class="badge bg-secondary">@Model.PedidosPendientes.Count pendientes</span>
</div>

<div class="card shadow border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Cliente / Fecha</th>
                        <th>Estado</th>
                        <th>Detalle del Pedido</th>
                        <th>Total</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.PedidosPendientes)
                    {
                        // Lógica Visual: ¿Este pedido necesita atención urgente?
                        // Buscamos si el estado dice "PAGADO" o "ESPERANDO"
                        bool requiereAccion = item.EstadoPedido != null &&
                        (item.EstadoPedido.Nombre.Contains("PAGADO") ||
                        item.EstadoPedido.Nombre.Contains("ESPERANDO"));

                        // Si requiere acción, pintamos la fila de amarillo suave
                        string claseFila = requiereAccion ? "table-warning" : "";

                        <tr class="@claseFila">
                            <td class="fw-bold">@item.IdPedido</td>

                            <td>
                                <span class="fw-bold">@(item.Usuario?.UserName ?? "Usuario Desconocido")</span>
                                <br />
                                <small class="text-muted">@item.FechaPedido.ToString("dd/MM HH:mm")</small>
                            </td>

                            <td>
                                @if (requiereAccion)
                                {
                                    <span class="badge bg-warning text-dark animate__animated animate__pulse animate__infinite">
                                        🔔 APROBAR
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-info text-dark">@item.EstadoPedido?.Nombre</span>
                                }
                            </td>

                            <td>
                                <ul class="list-unstyled mb-0 small">
                                    @foreach (var detalle in item.Detalles)
                                    {
                                        <li>
                                            <span class="fw-bold">@detalle.Cantidad</span> x @detalle.NombreProductoSnapshot
                                        </li>
                                    }
                                </ul>
                            </td>

                            <td class="fw-bold text-success">$@item.Total</td>

                            <td class="text-end">
                                @{
                                    var estado = item.EstadoPedido?.Nombre?.ToUpper() ?? "";
                                }

                                @if (estado.Contains("PAGADO") || estado.Contains("ESPERANDO"))
                                {
                                    <form method="post" asp-page-handler="Aceptar" asp-route-id="@item.IdPedido" class="d-inline">
                                        <button class="btn btn-success btn-sm" title="Mandar a Cocina">🍳 Acceptar</button>
                                    </form>
                                    <form method="post" asp-page-handler="Rechazar" asp-route-id="@item.IdPedido" class="d-inline ms-1">
                                        <button class="btn btn-outline-danger btn-sm" onclick="return confirm('¿Rechazar?')">❌</button>
                                    </form>
                                }
                                else if (estado.Contains("PREPARACION") || estado.Contains("COCINA"))
                                {
                                    <span class="badge bg-light text-dark border me-2">🔥 Cocinando...</span>
                                    <form method="post" asp-page-handler="EnviarDelivery" asp-route-id="@item.IdPedido" class="d-inline">
                                        <button class="btn btn-primary btn-sm">🛵 Enviar Repartidor</button>
                                    </form>
                                }
                                else if (estado.Contains("CAMINO") || estado.Contains("DELIVERY"))
                                {
                                    <span class="badge bg-primary me-2">🛵 En Ruta</span>
                                    <form method="post" asp-page-handler="ConfirmarEntrega" asp-route-id="@item.IdPedido" class="d-inline">
                                        <button class="btn btn-dark btn-sm">✅ Confirmar Entrega</button>
                                    </form>
                                }
                                else if (estado.Contains("ENTREGADO"))
                                {
                                    <span class="text-success fw-bold small">✨ Completado</span>
                                }
                                else if (estado.Contains("CANCELADO") || estado.Contains("RECHAZADO"))
                                {
                                    <span class="text-decoration-line-through text-muted small">Cancelado</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (Model.PedidosPendientes.Count == 0)
        {
            <div class="p-5 text-center text-muted">
                <h4>📭 Todo limpio</h4>
                <p>No hay nuevos pedidos pendientes de aprobación.</p>
            </div>
        }
    </div>
</div>