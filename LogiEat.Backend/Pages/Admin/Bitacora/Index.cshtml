@page
@model LogiEat.Backend.Pages.Admin.Bitacora.IndexModel
@{
    ViewData["Title"] = "Auditoría del Sistema";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>👁️ Auditoría / Bitácora</h1>
    <span class="text-muted small">Mostrando los últimos 100 eventos</span>
</div>

<div class="card shadow border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Fecha</th>
                        <th>Usuario</th>
                        <th>Acción</th>
                        <th>Entidad</th>
                        <th>Detalle</th>
                        <th>IP</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var log in Model.Registros)
                    {
                        <tr>
                            <td style="white-space:nowrap;">@log.Fecha.ToString("dd/MM/yyyy HH:mm:ss")</td>
                            <td class="fw-bold text-primary">@log.Usuario</td>
                            <td>
                                @if (log.Accion.Contains("Eliminar") || log.Accion.Contains("Borrar"))
                                {
                                    <span class="badge bg-danger">@log.Accion</span>
                                }
                                else if (log.Accion.Contains("Crear") || log.Accion.Contains("Nuevo"))
                                {
                                    <span class="badge bg-success">@log.Accion</span>
                                }
                                else if (log.Accion.Contains("Editar") || log.Accion.Contains("Actualizar"))
                                {
                                    <span class="badge bg-warning text-dark">@log.Accion</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@log.Accion</span>
                                }
                            </td>
                            <td>@log.Entidad</td>
                            <td class="text-muted small">@log.Descripcion</td>
                            <td class="text-monospace small">@log.Ip</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (Model.Registros.Count == 0)
        {
            <div class="p-5 text-center text-muted">
                <h4>🔕 Todo está tranquilo...</h4>
                <p>No hay registros de actividad en la bitácora aún.</p>
            </div>
        }
    </div>
</div>