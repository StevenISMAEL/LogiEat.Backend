@page
@model LogiEat.Backend.Pages.Cliente.MisFacturasModel
@{
    ViewData["Title"] = "Mis Facturas";
}

<div class="container py-4">
    <h2 class="mb-4">📄 Documentos Electrónicos</h2>

    <div class="card shadow border-0">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>N° Factura</th>
                        <th>Fecha</th>
                        <th>RUC / Cédula</th>
                        <th>Total</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Facturas)
                    {
                        <tr>
                            <td class="fw-bold">#@item.IdFactura.ToString("D9")</td>
                            <td>@item.FechaEmision.ToString("dd/MM/yyyy")</td>
                            <td>@item.RucCedula</td>
                            <td class="text-success fw-bold">$@item.Total</td>
                            <td class="text-end">
                                <a asp-page="./VerFactura" asp-route-id="@item.IdFactura" target="_blank" class="btn btn-sm btn-outline-primary">
                                    🖨️ Imprimir / PDF
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (Model.Facturas.Count == 0)
            {
                <div class="p-5 text-center text-muted">
                    No tienes facturas generadas aún.
                </div>
            }
        </div>
    </div>
</div>