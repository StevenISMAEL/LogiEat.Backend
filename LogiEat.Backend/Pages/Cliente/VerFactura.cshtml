@page "{id:int}"
@model LogiEat.Backend.Pages.Cliente.VerFacturaModel
@{
    Layout = null; // IMPORTANTE: Sin Layout para no cargar menús
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Factura #@Model.Factura.IdFactura</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

    <style>
        body {
            background: #f5f5f5;
            padding: 20px;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .invoice-box {
            max-width: 800px;
            margin: auto;
            padding: 30px;
            border: 1px solid #eee;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.15);
            font-size: 16px;
            line-height: 24px;
            color: #555;
            background: white;
        }

        /* ESTILOS DE IMPRESIÓN (La Magia) */
        @@media print {
            body {
                background: white;
                -webkit-print-color-adjust: exact;
            }

            .invoice-box {
                box-shadow: none;
                border: 0;
                width: 100%;
                max-width: 100%;
            }

            .btn-print {
                display: none !important;
            }
            /* Ocultar botón al imprimir */
            @@page {
                margin: 0;
            }
        }
    </style>
</head>
<body>

    <div class="text-center mb-4 btn-print">
        <button onclick="window.print()" class="btn btn-primary btn-lg shadow">
            🖨️ Imprimir o Guardar como PDF
        </button>
        <button onclick="window.close()" class="btn btn-secondary btn-lg ms-2">
            Cerrar
        </button>
    </div>

    <div class="invoice-box">
        <div class="row mb-4">
            <div class="col-8">
                <h1 class="text-primary fw-bold">LogiEat S.A.</h1>
                <p class="mb-0">Av. De las Hamburguesas 123</p>
                <p class="mb-0">RUC Emisor: 1799999999001</p>
                <p>Quito - Ecuador</p>
            </div>
            <div class="col-4 text-end">
                <h3 class="text-muted">FACTURA</h3>
                <h4 class="fw-bold">N° @Model.Factura.IdFactura.ToString("D9")</h4>
                <p class="small text-muted">Fecha: @Model.Factura.FechaEmision.ToString("dd/MM/yyyy HH:mm")</p>
            </div>
        </div>

        <hr />

        <div class="row mb-4">
            <div class="col-12">
                <h5 class="fw-bold text-dark">Cliente:</h5>
                <p class="mb-0"><strong>Razón Social:</strong> @Model.Factura.NombreCliente</p>
                <p class="mb-0"><strong>RUC / CI:</strong> @Model.Factura.RucCedula</p>
                <p><strong>Pedido Origen:</strong> #@Model.Factura.IdPedido</p>
            </div>
        </div>

        <table class="table table-bordered border-dark">
            <thead class="table-dark text-white">
                <tr>
                    <th>Cant.</th>
                    <th>Descripción</th>
                    <th class="text-end">P. Unitario</th>
                    <th class="text-end">Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Factura.Detalles)
                {
                    <tr>
                        <td class="text-center">@item.Cantidad</td>
                        <td>@item.ProductoNombre</td>
                        <td class="text-end">$@item.PrecioUnitario</td>
                        <td class="text-end">$@item.SubtotalLinea</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="row mt-3">
            <div class="col-6"></div>
            <div class="col-6">
                <table class="table table-sm border-0">
                    <tr>
                        <td class="text-end border-0"><strong>Subtotal:</strong></td>
                        <td class="text-end border-0" style="width: 120px;">$@Model.Factura.Subtotal</td>
                    </tr>
                    <tr>
                        <td class="text-end border-0"><strong>IVA (15%):</strong></td>
                        <td class="text-end border-0">$@Model.Factura.Iva</td>
                    </tr>
                    <tr class="table-active bg-light">
                        <td class="text-end border-0 fs-5"><strong>TOTAL:</strong></td>
                        <td class="text-end border-0 fs-5 fw-bold">$@Model.Factura.Total</td>
                    </tr>
                </table>
            </div>
        </div>

        <div class="mt-5 text-center text-muted small border-top pt-3">
            <p>Gracias por su compra. Documento generado electrónicamente por LogiEat.</p>
            <p>Para consultas escríbanos a facturacion@logieat.com</p>
        </div>
    </div>

</body>
</html>