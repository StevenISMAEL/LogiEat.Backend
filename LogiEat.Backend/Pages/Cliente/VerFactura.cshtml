@page "{id:int}"
@model LogiEat.Backend.Pages.Cliente.VerFacturaModel
@{
    Layout = null;

    // Lógica para decidir a dónde volver si no se puede cerrar la pestaña
    string urlVolver = "/";
    if (User.IsInRole("Admin") || User.IsInRole("Vendedor"))
    {
        urlVolver = Url.Page("/Admin/Facturas/Directa");
    }
    else
    {
        urlVolver = Url.Page("/Cliente/MisFacturas");
    }
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Factura #@Model.Factura.IdFactura</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

    <style>
        body {
            background: #f5f5f5;
            padding: 20px;
            font-family: 'Segoe UI', sans-serif;
        }

        .invoice-box {
            max-width: 800px;
            margin: auto;
            padding: 30px;
            border: 1px solid #eee;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.15);
            background: white;
        }

        @@media print {
            body {
                background: white;
            }

            .invoice-box {
                box-shadow: none;
                border: 0;
                width: 100%;
                max-width: 100%;
            }

            .btn-print {
                display: none !important;
            }
        }
    </style>
</head>
<body>

    <div class="text-center mb-4 btn-print">
        <button onclick="window.print()" class="btn btn-primary btn-lg shadow">
            🖨️ Imprimir o Guardar como PDF
        </button>

        @* CAMBIO 1: Botón inteligente para cerrar o redirigir *@
        <button onclick="cerrarOVolver()" class="btn btn-secondary btn-lg ms-2">
            Finalizar / Volver
        </button>
    </div>

    <div class="invoice-box">
        <div class="row mb-4">
            <div class="col-8">
                <h1 class="text-primary fw-bold">LogiEat S.A.</h1>
                <p class="mb-0">Av. De las Hamburguesas 123</p>
                <p class="mb-0">RUC Emisor: 1799999999001</p>
                <p>Quito - Ecuador</p>
            </div>
            <div class="col-4 text-end">
                <h3 class="text-muted">FACTURA</h3>
                <h4 class="fw-bold">N° @Model.Factura.IdFactura.ToString("D9")</h4>
                <p class="small text-muted">Fecha: @Model.Factura.FechaEmision.ToString("dd/MM/yyyy HH:mm")</p>
            </div>
        </div>

        <hr />

        <div class="row mb-4">
            <div class="col-12">
                <h5 class="fw-bold text-dark">Cliente:</h5>
                <p class="mb-0"><strong>Razón Social:</strong> @Model.Factura.NombreCliente</p>
                <p class="mb-0"><strong>RUC / CI:</strong> @Model.Factura.RucCedula</p>

                @* CAMBIO 2: Protección contra nulos para Facturación Directa (RF-02) *@
                <p>
                    <strong>Origen:</strong>
                    @(Model.Factura.IdPedido.HasValue ? $"Pedido #{Model.Factura.IdPedido}" : "Venta Directa / Local")
                </p>
            </div>
        </div>

        <table class="table table-bordered border-dark">
            <thead class="table-dark text-white">
                <tr>
                    <th>Cant.</th>
                    <th>Descripción</th>
                    <th class="text-end">P. Unitario</th>
                    <th class="text-end">Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Factura.Detalles)
                {
                    <tr>
                        <td class="text-center">@item.Cantidad</td>
                        <td>@item.ProductoNombre</td>
                        <td class="text-end">$@item.PrecioUnitario.ToString("N2")</td>
                        <td class="text-end">$@item.SubtotalLinea.ToString("N2")</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="row mt-3">
            <div class="col-6">
                @if (!string.IsNullOrEmpty(Model.Factura.ReferenciaPago))
                {
                    <p class="small text-muted"><strong>Nota:</strong> @Model.Factura.ReferenciaPago</p>
                }
            </div>
            <div class="col-6">
                <table class="table table-sm border-0">
                    <tr>
                        <td class="text-end border-0"><strong>Subtotal:</strong></td>
                        <td class="text-end border-0" style="width: 120px;">$@Model.Factura.Subtotal.ToString("N2")</td>
                    </tr>
                    <tr>
                        <td class="text-end border-0"><strong>IVA (15%):</strong></td>
                        <td class="text-end border-0">$@Model.Factura.Iva.ToString("N2")</td>
                    </tr>
                    <tr class="table-active bg-light">
                        <td class="text-end border-0 fs-5"><strong>TOTAL:</strong></td>
                        <td class="text-end border-0 fs-5 fw-bold">$@Model.Factura.Total.ToString("N2")</td>
                    </tr>
                </table>
            </div>
        </div>

        <div class="mt-5 text-center text-muted small border-top pt-3">
            <p>Gracias por su compra. Documento generado electrónicamente por LogiEat.</p>
        </div>
    </div>

    @* CAMBIO 3: Script para manejar el cierre inteligente *@
    <script>
        function cerrarOVolver() {
            window.close();
            setTimeout(function() {
                window.location.href = '@urlVolver';
            }, 100);
        }
    </script>

</body>
</html>